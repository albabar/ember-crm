<article id="lead">
    <h1>{{model.fullName}}</h1>

    <form action="">
        <fieldset>
            <dl>
                <dt><label>First Name</label></dt>
                <dd>{{view Em.TextField value=model.firstName}}</dd>
            </dl>
            <dl>
                <dt><label>Last Name</label></dt>
                <dd>{{view Em.TextField value=model.lastName}}</dd>
            </dl>
            <dl>
                <dt><label>Email</label></dt>
                <dd>{{view Em.TextField value=model.email}}</dd>
            </dl>
            <dl>
                <dt><label>Phone</label></dt>
                <dd>{{view Em.TextField value=model.phone}}</dd>
            </dl>
        </fieldset>

        <fieldset class="actions">
            <input type="submit" value="Save Changes" {{action 'saveChanges'}}>
            <a href="#" class="cancel" {{action 'cancel'}}>Cancel</a>
        </fieldset>
    </form>
</article>